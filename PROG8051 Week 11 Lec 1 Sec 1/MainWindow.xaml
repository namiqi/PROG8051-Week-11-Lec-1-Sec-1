        <CheckBox x:Name="_2" Content="STAT3000" HorizontalAlignment="Left" Margin="321,195,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="_3" Content="PROG1234" HorizontalAlignment="Left" Margin="321,215,0,0" VerticalAlignment="Top"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="504,290,0,0" VerticalAlignment="Top" Click="Save"/>

    </Grid>
</Window>
