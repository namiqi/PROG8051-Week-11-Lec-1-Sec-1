        <TextBox x:Name="age" HorizontalAlignment="Left" Margin="67,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="33" />
        <Button Content="Generate Email" HorizontalAlignment="Left" Margin="84,281,0,0" VerticalAlignment="Top" Click="GenerateEmail"/>
